<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChessTrainerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ChessTrainerApp"
    Shell.FlyoutBehavior="Disabled"
    Title="ChessTrainerApp"
    BackgroundColor="{StaticResource NavBarBackgroundColor}"
    TitleColor="{StaticResource NavBarTextColor}"
    ForegroundColor="{StaticResource NavBarTextColor}"
    >

    <ShellContent
        Title="ChessTrainerApp"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
