<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChessTrainerApp.MainPage"
             Title="ChessTrainerApp">

    <Grid>
        <Image Source="homepage.webp"
            Aspect="AspectFill"
            Opacity="0.60"/>

        <Grid RowDefinitions="0.2*, 0.8*" ColumnDefinitions="0.5*, 3*, 0.5*">
            <FlexLayout Direction="Column" Grid.Row="1" Grid.Column="1">
                <Button Text="Початок гри" Style="{StaticResource HomePageBtn}"></Button>
                <Button Text="Архів партій" Style="{StaticResource HomePageBtn}"></Button>
                <Button Text="Налаштування" Style="{StaticResource HomePageBtn}"></Button>
                <Button Text="Вихід" Style="{StaticResource HomePageBtn}"></Button>
            </FlexLayout>
        </Grid>
    </Grid>

</ContentPage>
